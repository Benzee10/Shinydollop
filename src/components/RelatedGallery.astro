
---
import type { SimilarPost } from "@utils/similar-posts";
import { getPostUrlBySlug } from "@utils/url-utils";
import { Icon } from "astro-icon/components";

interface Props {
  similarPosts: SimilarPost[];
  class?: string;
}

const { similarPosts, class: className = "" } = Astro.props;

if (similarPosts.length === 0) return null;
---

<div class={`related-gallery-container ${className}`}>
  <div class="flex items-center gap-3 mb-6">
    <div class="h-8 w-8 rounded-lg bg-[var(--primary)]/10 flex items-center justify-center">
      <Icon name="material-symbols:image-outline" class="text-lg text-[var(--primary)]" />
    </div>
    <h3 class="text-xl font-bold text-black/90 dark:text-white/90">
      Related Galleries
    </h3>
  </div>
  
  <div class="related-gallery-grid onload-animation">
    {similarPosts.map((post) => (
      <a 
        href={getPostUrlBySlug(post.slug)}
        class="group block relative overflow-hidden rounded-xl hover:shadow-lg transition-all duration-300 active:scale-[0.98] gallery-card"
      >
        <div class="aspect-[4/5] overflow-hidden bg-gradient-to-br from-gray-100 to-gray-200 dark:from-gray-800 dark:to-gray-900">
          {post.data.image ? (
            <img 
              src={post.data.image} 
              alt={post.data.title}
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
              loading="lazy"
            />
          ) : (
            <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-[var(--primary)]/10 to-[var(--primary)]/20">
              <Icon name="material-symbols:image-outline" class="text-4xl text-[var(--primary)]/50" />
            </div>
          )}
        </div>
        
        <!-- Overlay with content -->
        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <div class="absolute bottom-0 left-0 right-0 p-4 text-white">
            <!-- Category Badge -->
            {post.data.category && (
              <div class="mb-2">
                <span class="inline-block px-2 py-1 text-xs font-semibold bg-white/20 backdrop-blur-sm text-white rounded-md">
                  {post.data.category}
                </span>
              </div>
            )}
            
            <!-- Title -->
            <h4 class="font-bold text-white mb-1 line-clamp-2">
              {post.data.title}
            </h4>
            
            <!-- Metadata -->
            <div class="flex items-center justify-between text-xs text-white/80">
              <span>{post.data.published.toLocaleDateString()}</span>
              <div class="flex items-center gap-1">
                <Icon 
                  name="material-symbols:chevron-right-rounded" 
                  class="text-lg transition-transform group-hover:translate-x-1"
                />
              </div>
            </div>
          </div>
        </div>
        
        <!-- Corner indicator for similarity -->
        <div class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <div class="bg-[var(--primary)] text-white px-2 py-1 rounded-md text-xs font-semibold">
            {post.similarity} match{post.similarity !== 1 ? 'es' : ''}
          </div>
        </div>
      </a>
    ))}
  </div>
</div>

<style>
  .related-gallery-container {
    animation: slideUp 0.6s ease-out;
  }
  
  .related-gallery-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    padding: 0;
  }

  @media (min-width: 640px) {
    .related-gallery-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.25rem;
    }
  }

  @media (min-width: 1024px) {
    .related-gallery-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 1.5rem;
    }
  }

  @media (min-width: 1280px) {
    .related-gallery-grid {
      grid-template-columns: repeat(5, 1fr);
    }
  }
  
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .gallery-card {
    transition: all 0.3s ease;
  }

  .gallery-card:hover {
    transform: translateY(-4px);
  }
</style>
